{
"update_url": "https://clients2.google.com/service/update2/crx",

	"name": "Trello scrum points",
	"version": "0.5",
	"description": "Scrum poiting system for Trello",
	"content_scripts": [
		{
			"matches": ["https://trello.com/*"],
			"js": ["jquery-3.2.1.min.js","scrumpoints.js"],
			"css": ["scrumpoints.css"]
		}
	],
	"manifest_version" : 2,
    "icons": { "128": "images/scrum-points-icon.png" },
	"permissions": [
		"storage"
	]
}
